<%= form_for @group do |f| %>
 <% if @group.errors.any? %>
   <ul>
     <% @group.errors.full_messages.each do |msg| %>
     <li>
       <%= msg %>
     </li>
     <% end %>
   </ul>
   
 <% end %>
 
 <%= f.label :title, "標題" %>
 <%= f.text_field :title %>
 <br>
 <%= f.label :description, "敘述" %>
 <%= f.text_field :description %>
 <br>
 <%= f.submit "Submit", :disable_with => 'Submitting...'%>
<% end %>